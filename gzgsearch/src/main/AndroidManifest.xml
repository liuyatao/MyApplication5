<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.myapplication" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.gzport.gzgsearch.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gzport.gzgsearch.app.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gzport.gzgsearch.app.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.gzport.gzgsearch.app.SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName="com.gzport.gzgsearch.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gzport.gzgsearch.app.MainActivity" />
        </activity>
        <activity
            android:name="com.gzport.gzgsearch.app.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.gzport.gzgsearch.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gzport.gzgsearch.app.MainActivity" />
        </activity>
    </application>

</manifest>
