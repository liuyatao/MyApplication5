<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--吞吐量-->
    <android.support.v7.widget.CardView
        android:id="@+id/goal_throughtout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吞吐量(吨)"
                android:textColor="@color/blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月计划：" />

                <TextView
                    android:id="@+id/goal_throughout_monthplan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33333333.3333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成：" />

                <TextView
                    android:id="@+id/goal_throughout_monthcomplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999.000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进度：" />

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/goal_throughtout_cirecleprogress"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="15dp"
                    CircleProgressView:cpvCircleAnimDuration="20"
                    CircleProgressView:cpvColor="@color/blue"
                    CircleProgressView:cpvStrokeWidth="0dp"
                    CircleProgressView:cpvSweepAnimDuration="50"></at.grabner.circleprogress.CircleProgressView>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!--集装箱-->
    <android.support.v7.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/goal_container"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="集装箱（TEU）"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月计划：" />

                <TextView
                    android:id="@+id/goal_container_monthplan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33333333.3333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成：" />

                <TextView
                    android:id="@+id/goal_container_monthcomplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999.000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进度：" />

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/goal_container_cirecleprogress"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="15dp"
                    CircleProgressView:cpvCircleAnimDuration="20"
                    CircleProgressView:cpvColor="@color/blue"
                    CircleProgressView:cpvStrokeWidth="0dp"
                    CircleProgressView:cpvSweepAnimDuration="50"></at.grabner.circleprogress.CircleProgressView>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="15dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="库存量（吨）"/>
            <TextView
                android:id="@+id/goal_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="飞222"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>