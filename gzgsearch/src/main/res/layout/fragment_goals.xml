<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzport.gzgsearch.fragment.GoalsFragment">

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/goal_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--吞吐量-->
            <android.support.v7.widget.CardView
                android:id="@+id/goal_throughtout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吞吐量(吨)"
                        android:textColor="@color/blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="月计划：" />

                        <TextView
                            android:id="@+id/goal_throughout_monthplan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="33333333.3333" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完成：" />

                        <TextView
                            android:id="@+id/goal_throughout_monthcomplete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99999.000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="进度：" />

                        <TextView
                            android:id="@+id/goal_throughout_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--集装箱-->
            <android.support.v7.widget.CardView
                android:id="@+id/goal_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集装箱（TEU）"
                        android:textColor="@color/blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="月计划：" />

                        <TextView
                            android:id="@+id/goal_container_monthplan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="33333333.3333" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完成：" />

                        <TextView
                            android:id="@+id/goal_container_monthcomplete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99999.000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="进度：" />

                        <TextView
                            android:id="@+id/goal_teu_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="15dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="库存量（吨）"
                        android:textColor="@color/blue" />

                    <TextView
                        android:id="@+id/goal_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="飞222" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>


    <!-- <ScrollView
         android:id="@+id/goal_scrollView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

     </ScrollView>-->

    <!--<com.expandable.view.ExpandableView
        android:id="@+id/goal_expandableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/goal_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="15dp"></android.support.design.widget.FloatingActionButton>


</FrameLayout>
