<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzport.gzgsearch.fragment.LoadAndUnLoadFragment">

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/load_and_unload_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/load_barchart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                />

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/load_and_unload_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="15dp"></android.support.design.widget.FloatingActionButton>

</FrameLayout>
